<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="public/css/home.css" />
    <link href="https://fonts.googleapis.com/css?family=Baloo+Bhai|Candal|Chewy&display=swap" rel="stylesheet"/>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous"/>
    <style>
      .todo-add-task {
        text-align: left;
      }
    </style>
  </head>
  <body>
    <!-- <a><span></span><span></span><span></span><span></span><%= kindOfDay %></a> -->
    <div class="todo-container">
      <a><span></span><span></span><span></span><span></span><%= kindOfDay %></a>
      <h2>To-Do List</h2>
      <div class="todo-add-task">
        <a href="/addTask"
          ><button type="Submit" id="new-task-submit">Add Task</button></a>
      </div>
      <div class="todo">
        <ul class="todo-list">
          <% todo.forEach(function(abc){ %>
          <li class="todo-list-item">
            <div class="todo-list-items">
              <p class="todo-list-item-name"><%= abc.title %></p>
              <p class="todo-list-item-desc">--<%= abc.description %></p>
              <span class="todo-list-item-dateTime"><%= abc.time %></span>
            </div>
            <a href="edit/<%= abc.id%>" class="edit"><button type="Submit" id="new-task-submit">Edit</button></a>
            <a href="delete/<%= abc.id%>" class="delete"><button type="Submit" id="new-task-submit">Delete</button></a>
          </li>

          <% }); %>
        </ul>
      </div>
    </div>
  </body>
</html>
